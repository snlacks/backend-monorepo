{
  "name": "stevenlackscom-auth",
  "description": "Backend for user auth, login, logout",
  "author": "Steven Lacks <snlacks@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ../../dist/apps/$npm_package_name/src/main",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "cp ../../.env.$npm_package_name .env",
    "build": "nest build",
    "postbuild": "cp ../../.env.$npm_package_name ../../dist/apps/$npm_package_name/.env",
    "sctl-start": "pm2 start node --name $npm_package_name -- ../../dist/apps/$npm_package_name/src/main",
    "sctl-stop": "pm2 stop $npm_package_name || true",
    "sctl-delete": "pm2 delete $npm_package_name || true",
    "hc-start": "APP_PORT=4000 pm2 start node --name hc-$npm_package_name -- ../../dist/apps/$npm_package_name/src/main",
    "hc-stop": "pm2 stop hc-$npm_package_name || true",
    "hc-delete": "pm2 delete hc-$npm_package_name || true",
    "hc-end": "npm run hc-stop && npm run hc-delete",
    "wait-check": "concurrently \"npm run hc-start\" \"wait-on http-get://localhost:4000 --httpTimeout=20000\"",
    "healthcheck": "APP_PORT=4000 cross-env npm run lint && npm run build && npm run wait-check && npm run hc-end",
    "launch": "npm run build && npm run sctl-stop && npm run sctl-delete && npm run sctl-start"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@snlacks/core": "*",
    "axios": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.30.0",
    "google-auth-library": "^9.11.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "ollama": "^0.5.1",
    "otp-generator": "^4.0.1",
    "pm2": "^5.4.1",
    "reflect-metadata": "^0.1.13",
    "twilio": "^4.19.3",
    "typeorm": "^0.3.20",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.3.8",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.3.1",
    "@types/otp-generator": "^4.0.2",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "globals": "^15.6.0",
    "jest": "29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "typescript-eslint": "^7.14.1"
  },
  "jest": {
    "maxWorkers": "1",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "setupTests.ts"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test-config",
      "interfaces",
      "jestGlobalMocks.ts",
      ".module.ts",
      "main.ts",
      ".mock.ts",
      "dist",
      ".module.ts",
      ".entity.ts",
      ".dto.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
