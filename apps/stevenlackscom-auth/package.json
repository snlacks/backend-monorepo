{
  "name": "stevenlackscom-auth",
  "version": "0.1.0",
  "description": "Backend for user auth, login, logout",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "postbuild": "cp .env ../../dist/apps/stevenlackscom-auth/.env",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cp .env ../../dist/apps/stevenlackscom-auth/.env && NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "service-stop": "pm2 stop stevenlackscom-auth",
    "service-delete": "pm2 delete stevenlackscom-auth",
    "service-start": "pm2 delete npm --name stevenlackscom-auth -- start"
  },
  "dependencies": {
    "@snlacks/token": "*",
    "@snlacks/config": "*",
    "@snlacks/ai-chat": "*",
    "@snlacks/auth": "*",
    "@snlacks/twilio": "*",
    "@snlacks/gmail": "*",
    "@google-cloud/local-auth": "^3.0.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.2",
    "cookie-parser": "^1.4.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.30.0",
    "google-auth-library": "^9.11.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "ollama": "^0.5.1",
    "otp-generator": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "twilio": "^4.19.3",
    "typeorm": "^0.3.17",
    "pm2": "^5.4.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.3.8",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.3.1",
    "@types/otp-generator": "^4.0.2",
    "@types/supertest": "^6.0.2",
    "jest": "29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "maxWorkers": "1",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "setupTests.ts"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test-config",
      "interfaces",
      "jestGlobalMocks.ts",
      ".module.ts",
      "main.ts",
      ".mock.ts",
      "dist",
      ".module.ts",
      ".entity.ts",
      ".dto.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
