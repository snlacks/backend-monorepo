{
  "name": "markdun-auth",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ../../dist/apps/markdun-auth/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "cp ../../.env.$npm_package_name .env",
    "build": "nest build",
    "postbuild": "cp ../../.env.$npm_package_name ../../dist/apps/$npm_package_name/.env",
    "sctl-start": "pm2 start node --name $npm_package_name -- ../../dist/apps/$npm_package_name/src/main",
    "sctl-stop": "pm2 stop $npm_package_name || true",
    "sctl-delete": "pm2 delete $npm_package_name || true",
    "hc-start": "APP_PORT=4000 pm2 start node --name hc-$npm_package_name -- ../../dist/apps/$npm_package_name/src/main",
    "hc-stop": "pm2 stop hc-$npm_package_name || true",
    "hc-delete": "pm2 delete hc-$npm_package_name || true",
    "hc-end": "npm run hc-stop && npm run hc-delete",
    "wait-check": "concurrently \"npm run hc-start\" \"wait-on http-get://localhost:4000 --httpTimeout=20000\"",
    "healthcheck": "APP_PORT=4000 cross-env npm run lint && npm run build && npm run wait-check && npm run hc-end",
    "launch": "npm run build && npm run sctl-stop && npm run sctl-delete && npm run sctl-start"
  },
  "dependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.3.9",
    "@snlacks/auth": "*",
    "@snlacks/utils": "*",
    "nodemailer": "^6.9.14",
    "pm2": "^5.4.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "typescript-eslint": "^7.14.1"
  }
}
