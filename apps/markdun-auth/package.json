{
  "name": "markdun-auth",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ../../dist/apps/markdun-auth/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "nest build",
    "build:prod": "rm -rf ../../dist/apps/markdun-auth && ncc build src/main.ts --out ../../dist/apps/markdun-auth/src/"
  },
  "dependencies": {
    "@eslint/js": "^9.5.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/typeorm": "^10.0.2",
    "@snlacks/core": "*",
    "@vercel/ncc": "^0.38.1",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "mysql2": "^3.10.1",
    "nodemailer": "^6.9.14",
    "otp-generator": "^4.0.1",
    "typeorm": "^0.3.20",
    "typescript-eslint": "^7.14.1"
  }
}
